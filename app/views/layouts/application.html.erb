<!DOCTYPE html>
<html>
<head>
  <title>Harpuun</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="assets/stylesheets/bootstrap-responsive.css" rel="stylesheet">
</head>
<body>
  <div class="container">
    <div class="navbar">
      <div class="navbar-inner">
        <ul class="nav">

  	      	<li><%= link_to( image_tag("/assets/harpuunlogo.png", :width => "200"), root_url, ) %></li>

			<% if client_logged_in?  %>
  				<% if @client.projects.any? %>
	  				<li><%= link_to "Projects", client_projects_url(@client) %></li>
	  			<% else %>
	  				<li><%= link_to "Add New Project", new_client_project_url(@client) %></li>
	  			<% end  %>
				<li><%= link_to "Profile", client_url(@client) %></li>
 			<% end  %>

			<% if starter_logged_in?  %>
  				<li><%= link_to "Projects ", starter_projects_url(@starter) %></li>
				<li><%= link_to "Profile", starter_url(@starter) %></li>
 			<% end  %>
				
			<li><%= link_to "How it Works ", how_it_works_url %></li>
	        <li><%= link_to "Our Team", our_team_url %></li>

  			<% if !client_logged_in? %>
				<% if !starter_logged_in?  %>
				  <li>Sing in:</li>	
	              <li><%= link_to 'Client', signin_client_url %></li>
				  <li><%= link_to 'Starter', signin_starter_url %></li>
				<% end  %>
	        <% end %>
	
			<% if client_logged_in?  %>	
				<li><%= link_to 'Sign out', signout_client_url %></li>
			<% end %>
			
			<% if starter_logged_in?  %>	
				<li><%= link_to 'Sign out', signout_starter_url %></li>
			<% end %>
			
			
		
	          

  			<li>admin:</li>
  		
  			<li><a href="#"><%= link_to "Clients", clients_url %></a></li>
	  		<li><a href="#"><%= link_to "Starters", starters_url %></a></li>
	  		<li><a href="#"><%= link_to "Skills", skills_url %></a></li>

        </ul>
      </div> 
    </div>    
  </div>
