<!DOCTYPE html>
<html>
<head>
  <title>Harpuun</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
  <div class="container">
    <div class="navbar">
      <div class="navbar-inner">
        <ul class="nav">

  	      	<li class="navbar-logo"><%= link_to( image_tag("harpuunlogo.png", :width => "200"), 'home' ) %></li>
				
			<!-- Top navigation links for logged_in Client -->
			<% if client_logged_in?  %>
  				<% if @client.projects.any? %>
	  				<li><%= link_to "Projects", client_projects_url(@client) %></li>
	  			<% else %>
	  				<li><%= link_to "Add New Project", new_client_project_url(@client) %></li>
	  			<% end  %>
				<li><%= link_to "My Profile", client_url(@client) %></li>
 			<% end  %>
			
			<!-- Top navigation links for logged_in Starter -->
			<% if starter_logged_in?  %>
  				<li><%= link_to "Projects ", starter_projects_url(@starter) %></li>
				<li><%= link_to "My Profile", starter_url(@starter) %></li>
 			<% end  %>
			
			<!-- Sign Out Links -->
			<% if client_logged_in?  %>	
				<li><%= link_to 'Sign out', signout_client_url %></li>
        <li class="nav-unlinked">|</li>
			<% end %>
			<% if starter_logged_in?  %>	
				<li><%= link_to 'Sign out', signout_starter_url %></li>
        <li class="nav-unlinked">|</li>
			<% end %>
			
			<!-- General Top Navigation Links -->
			<li><%= link_to "How it Works ", how_it_works_url %></li>
	        <li><%= link_to "Our Team", our_team_url %></li>
			
			<!-- Top navigation Sign In Links -->
			<% if !client_logged_in? && !starter_logged_in? %>
				  <li class="nav-unlinked">Sign in:</li>	
	              <li><%= link_to 'Client', signin_client_url %></li>
				  <li><%= link_to 'Starter', signin_starter_url %></li>
	        <% end %>

        </ul>
      </div> 
    </div>    
  </div>

