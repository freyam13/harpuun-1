<div class="indented hero-unit">

	<legend>Sign in</legend>
	<%= form_tag "/session", :class => "form-horizontal" do %>
		<div class="control-group">
			<%= label_tag :email, "Email", :class => "control-label", :for =>"inputEmail" %>
		  	<%= text_field_tag :email, nil, :class => "controls", :id => "inputEmail" %>
		</div>
		<div class="control-group">
			<%= label_tag :password, "Password", :class => "control-label", :for =>"inputPassword" %>
			<%= password_field_tag :password, nil, :class => "controls", :id => "inputPassword" %>
		</div>
		<div class="actions">
		  	<%= submit_tag "Sign In", :class => "btn btn-large btn-primary"%> 
		</div>
	<% end %>
	
</div>

