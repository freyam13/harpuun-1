<div class="indented hero-unit">

	<legend>Sign in</legend>
	<%= form_tag "/session" do %>
		  <%= label_tag :email, "Email:" %>
		  <%= text_field_tag :email %>
		  <%= label_tag :password, "Password:" %>
		  <%= password_field_tag :password %>
		  <div>
		  <%= submit_tag "Login", :class => "btn btn-large btn-primary"%> 
		</div>
	<% end %>
	
</div>