<% if @actual_projects.any?  %>
	<%= render '_project_table', :title => "Accepted Projects", :projects => @actual_projects %>
<% end  %>


<% if @offered_projects.any?  %>
	<%= render '_project_table', :title => "Offered Projects", :projects => @offered_projects %>
<% end  %>

<%= button_to 'Add New Project', new_client_project_url(@client), :method => "get", :class => "btn btn-large btn-primary" %>
