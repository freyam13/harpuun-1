    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :company %><br />
    <%= f.text_field :company %>
  </div>
  <div class="field">
    <%= f.label :avatar_url, "Upload your picture" %><br />
    <%= f.file_field :avatar_url %>
  </div>
  <div class="field">
    <%= f.label :remote_avatar_url_url, "or paste picture's link" %><br />
    <%= f.text_field :remote_avatar_url_url %>
  </div>
  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation %>
  </div>
