<%= form_for @client, :html => {:multipart => true, :class => "form-horizontal"}  do |f| %>
  <% if @client.errors.any? %>
    <div id="error_explanation">
      <h4><%= pluralize(@client.errors.count, "error") %> prohibited this client from being saved:</h4>
	  <ul>
	      <% @client.errors.full_messages.each do |msg| %>
	        <li><%= msg %></li>
	      <% end %>
      </ul>
    </div>
  <% end %>

  <p>Fill your login info and get hooked:</p>

  <div class="control-group">
    <%= f.label :first_name, :class => "control-label", :for =>"inputFirstName" %>
    <%= f.text_field :first_name, :class => "controls", :id => "inputFirstName" %>
  </div>
  <div class="control-group">
    <%= f.label :last_name, :class => "control-label", :for =>"inputLastName" %>
    <%= f.text_field :last_name, :class => "controls", :id => "inputLastName" %>
  </div>
  <div class="control-group">
    <%= f.label :email, :class => "control-label", :for =>"inputEmail" %>
    <%= f.text_field :email, :class => "controls", :id => "inputEmail"  %>
  </div>
  <div class="control-group">
    <%= f.label :password, :class => "control-label", :for =>"inputPassword" %>
    <%= f.password_field :password, :class => "controls", :id => "inputPassword"  %>
  </div>
  <div class="control-group">
    <%= f.label :password_confirmation, "Confirm password", :class => "control-label", :for =>"inputPasswordConfirmation" %>
    <%= f.password_field :password_confirmation, :class => "controls", :id => "inputPasswordConfirmation"  %>
  </div>
  <br />
  <p>Fill additional info and end we will provide even better service for you:</p>

  <div class="control-group">
    <%= f.label :company, :class => "control-label", :for =>"inputCompany"  %>
    <%= f.text_field :company, :class => "controls", :id => "inputCompany" %>
  </div>
  <div class="control-group">
    <%= f.label :avatar, "Your photo", :class => "control-label", :for =>"inputAvatarFile" %>
    <%= f.file_field :avatar, :class => "controls", :id => "inputAvatarFile" %>
  </div>
  <div class="actions">
    <%= f.submit :class => "btn btn-large btn-primary btn-signup" %>
  </div>

<% end %>
