<%= form_for @starter, :html => {:multipart => true} do |f| %>
  <% if @starter.errors.any? %>
    <div id="error_explanation">
      <h4><%= pluralize(@starter.errors.count, "error") %> prohibited this Starter from being saved:</h4>
      
	  <ul>
	      <% @starter.errors.full_messages.each do |msg| %>
	        <li><%= msg %></li>
	      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :first_name %>
    <%= f.text_field :first_name %><br />
  </div>
  <div class="field">
    <%= f.label :last_name %>
    <%= f.text_field :last_name %><br />
  </div>
  <div class="field">
    <%= f.label :email %>
    <%= f.text_field :email %><br />
  </div>
  <div class="field">
    <%= f.label :avatar, "Upload your picture" %>
    <%= f.file_field :avatar %><br />
  </div>
  <div class="field">
    <%= f.label :remote_avatar_url, "or paste picture's link" %>
	<%= f.text_field :remote_avatar_url %><br />
  </div>
  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password %><br />
  </div>
  <div class="field">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %><br />
  </div>
  <div class="actions">
    <%= f.submit :class => "btn btn-large btn-primary" %>
  </div>

<% end %>
