<%= form_for @starter, :html => {:multipart => true, :class => "form-horizontal"} do |f| %>
  <% if @starter.errors.any? %>
    <div id="error_explanation">
      <h4><%= pluralize(@starter.errors.count, "error") %> prohibited this Starter from being saved:</h4>
      
	  <ul>
	      <% @starter.errors.full_messages.each do |msg| %>
	        <li><%= msg %></li>
	      <% end %>
      </ul>
    </div>
  <% end %>

  <p>Fill you login info and get hooked:</p>

  <div class="control-group">
    <%= f.label :first_name, :class => "control-label", :for =>"inputFirstName" %>
    <%= f.text_field :first_name, :class => "controls", :id => "inputFirstName" %>
  </div>
  <div class="control-group">
    <%= f.label :last_name, :class => "control-label", :for =>"inputLastName" %>
    <%= f.text_field :last_name, :class => "controls", :id => "inputLastName" %>
  </div>
  <div class="control-group">
    <%= f.label :email, :class => "control-label", :for =>"inputEmail" %>
    <%= f.text_field :email, :class => "controls", :id => "inputEmail"  %>
  </div>
  
	<div class="control-group">
	  <%= f.label :password, :class => "control-label", :for =>"inputPassword" %>
	  <%= f.password_field :password, :class => "controls", :id => "inputPassword"  %>
	</div>
	<div class="control-group">
	  <%= f.label :password_confirmation, "Confirm password", :class => "control-label", :for =>"inputPasswordConfirmation" %>
	  <%= f.password_field :password_confirmation, :class => "controls", :id => "inputPasswordConfirmation"  %>
	</div>


  <br />
  <p>Fill additional info and end we will provide even better service for you:</p>

  <div class="form-inline">
	<%= f.label :last_quarter, "Last TSL quarter", :class => "control-label" %>
	<%= f.select :quarter, raw("<option>fall</option><option>winter</option><option>spring</option><option>summer</option>"), :class => "input-small" %>    
	<%= f.select :year, raw("<option>2012</option><option>2011</option>"), :class => "input-small" %>
  </div>

  <div class="form-inline">
	<p class="form_info_text">Select skills based on what you know best or what jobs you want to get. You can select just 1.</p>
	<%= f.label :skillset, "Your skills", :class => "control-label" %>
	<%= f.collection_select :skill_id1, Skill.all, :id, :name, :prompt => "first ...", :class => "input-small" %>
	<%= f.collection_select :skill_id2, Skill.all, :id, :name, :prompt => "second ...", :class => "input-small" %>    
	<%= f.collection_select :skill_id3, Skill.all, :id, :name, :prompt => "third ...", :class => "input-small" %>
  </div>
  

  <div class="control-group">
    <%= f.label :twitter, :class => "control-label", :for =>"inputTwitter" %>
    <%= f.text_field :twitter, value: '@', :class => "controls", :id => "inputTwitter" %>
  </div>

  <div class="control-group">
    <%= f.label :avatar, "Your photo", :class => "control-label", :for =>"inputPictureFile" %>
    <%= f.file_field :avatar, :class => "controls", :id => "inputPictureFile" %>
  </div>

  <div class="actions">
    <%= f.submit :class => "btn btn-large btn-primary btn-signup" %>
  </div>

<% end %>
